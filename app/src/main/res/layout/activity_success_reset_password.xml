<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SuccessResetPasswordActivity"
	android:padding="24sp">

	<ImageView
		android:id="@+id/backBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="160dp"
		android:src="@drawable/ic_succesfull_logo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tvHeader1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="36dp"
		android:fontFamily="@font/montserrat_semi_bold"
		android:text="@string/successful"
		android:textAlignment="center"
		android:textSize="38sp"
		app:layout_constraintTop_toBottomOf="@+id/backBtn"
		tools:layout_editor_absoluteX="24dp" />

	<TextView
		android:id="@+id/tvSubHeader1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:text="You have succesfully change password."
		android:textAlignment="center"
		android:textSize="16sp"
		app:layout_constraintTop_toBottomOf="@+id/tvHeader1"
		tools:layout_editor_absoluteX="24dp" />

	<TextView
		android:id="@+id/tvSubHeader2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Please use your new passwords when logging in."
		android:textAlignment="center"
		android:textSize="16sp"
		app:layout_constraintTop_toBottomOf="@+id/tvSubHeader1"
		tools:layout_editor_absoluteX="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>